#!/bin/bash

usage(){
    echo -e "\nUsage: $0 start|stop|log|restart\n"
    exit
}

stack_start(){
    docker-compose up -d && docker-compose exec fpm php -S 0.0.0.0:80 -t ./
}

stack_stop(){
    docker-compose down
}

[ -z "$1" ] && usage

source $PWD/.env

case $1 in
    start)
        stack_start
        ;;
    stop)
        stack_stop
        ;;
    restart)
        stack_stop
        stack_start
        ;;
    log)
        shift 1
        docker-compose logs "$@"
        ;;
    *)
        usage
        ;;
esac
